{
  "manifest_version": 2,
  "name": "Kazakh IME (Russian to Kazakh)",
  "version": "1.0",
  "description": "Input Method Engine for converting Russian phonetic input to Kazakh",

  "permissions": [
    "activeTab",
    "storage"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "wordbank.js",
        "dictionary.js", 
        "ime-engine.js", 
        "content.js"
      ],
      "all_frames": true
    }
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Kazakh IME",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },

  "commands": {
    "toggle-ime": {
      "suggested_key": {
        "default": "Ctrl+Shift+K"
      },
      "description": "Toggle Kazakh IME on/off"
    }
  }
}
